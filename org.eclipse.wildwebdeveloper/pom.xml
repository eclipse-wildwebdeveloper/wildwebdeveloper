<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.eclipse.wildwebdeveloper</artifactId>
	<parent>
		<groupId>org.eclipse.wildwebdeveloper</groupId>
		<artifactId>parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
	</parent>
	<packaging>eclipse-plugin</packaging>
	<version>0.5.5-SNAPSHOT</version>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>language-servers/node_modules</directory>
						</fileset>
						<fileset>
							<directory>language-servers/</directory>
							<includes>*.tgz</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>download-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>fetch-vscode</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://az764295.vo.msecnd.net/stable/ae08d5460b5a45169385ff3fd44208f431992451/code-stable-1580986866.tar.gz</url>
							<unpack>true</unpack>
							<outputDirectory>${project.build.directory}/vscode</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>fetch-chrome-debug-adapter</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://marketplace.visualstudio.com/_apis/public/gallery/publishers/msjsdiag/vsextensions/debugger-for-chrome/4.11.7/vspackage</url>
							<outputFileName>chromeDebugAdapter.zip</outputFileName>
							<unpack>true</unpack>
							<outputDirectory>${project.build.directory}/chrome-debug-adapter</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<delete
									file="${project.build.directory}/chrome-debug-adapter/extension/.gitignore" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.6.0</version>
				<executions>
					<execution>
						<id>local install VSCode Language servers</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<executable>npm</executable>
							<arguments>
								<arg>pack</arg>
								<arg>--no-bin-links</arg>
								<arg>--ignore-scripts</arg>
								<arg>../target/vscode/VSCode-linux-x64/resources/app/extensions/html-language-features/server</arg>
								<arg>../target/vscode/VSCode-linux-x64/resources/app/extensions/css-language-features/server</arg>
								<arg>../target/vscode/VSCode-linux-x64/resources/app/extensions/json-language-features/server</arg>
								<arg>../target/vscode/VSCode-linux-x64/resources/app/extensions/ms-vscode.node-debug2</arg>
								<arg>../target/chrome-debug-adapter/extension/</arg>
							</arguments>
							<workingDirectory>language-servers/</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>provision servers and deps</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<executable>npm</executable>
							<arguments>
								<arg>install</arg>
								<arg>--no-bin-links</arg>
								<arg>--ignore-scripts</arg>
								<arg>./node-debug2-1.42.1.tgz</arg>
								<arg>typescript@3.8.2</arg>
								<arg>typescript-language-server@0.4.0</arg>
								<arg>typescript-lit-html-plugin@0.9.0</arg>
								<arg>typescript-plugin-css-modules@2.1.0</arg>
								<arg>./vscode-css-languageserver-1.0.0.tgz</arg>
								<arg>./vscode-html-languageserver-1.0.0.tgz</arg>
								<arg>./vscode-json-languageserver-1.2.2.tgz</arg>
								<arg>yaml-language-server@0.6.1</arg>
								<arg>firefox-debugadapter@2.6.1</arg>
								<arg>debugger-for-chrome-4.11.7.tgz</arg>
								<arg>typescript-eslint-language-service@1.4.0</arg>
								<arg>eslint@6.0.0</arg>
								<arg>@typescript-eslint/eslint-plugin@2.7.0</arg>
								<arg>@typescript-eslint/parser@2.7.0</arg>
								<arg>@angular/language-service@9.0.0-rc.4</arg>
								<arg>@angular/language-server@0.900.0</arg>
							</arguments>
							<workingDirectory>language-servers/</workingDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.3</version>
				<executions>
					<execution>
						<id>enable-formatting</id>
						<phase>process-resources</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<basedir>${basedir}</basedir>
							<includes>
								<include>language-servers/node_modules/vscode-json-languageserver/out/jsonServerMain.js</include>
							</includes>
							<replacements>
								<replacement>
									<token>documentRangeFormattingProvider: false</token>
									<value>documentRangeFormattingProvider: true</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
					<execution>
						<id>workaround-vscode-chrome-debug-core-issue-516</id>
						<phase>process-resources</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<basedir>${basedir}</basedir>
							<includes>
								<include>language-servers/node_modules/vscode-chrome-debug-core/out/src/chrome/chromeDebugAdapter.js</include>
							</includes>
							<replacements>
								<replacement>
									<!--token>reportBpTelemetry(args) {</token-->
									<token>reportBpTelemetry\(args\) \{</token>
									<value>// Added by Wild Web Developer at build time
    setVariable(args) {
        return this._variablesManager.setVariable(args);
    }
    // end of "Added by Wild Web Developer at build time"
    reportBpTelemetry(args) {</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<configuration>
					<jgit.ignore>
						pom.xml
						language-servers/node_modules
					</jgit.ignore>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
